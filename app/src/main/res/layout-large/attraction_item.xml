<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attraction_cv"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_centerInParent="true"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:maxWidth="304dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cel_attraction"
        android:maxWidth="304dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/attraction_image"
            android:layout_width="110dp"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder_attraction" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/attraction_title"
                    style="@style/itemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="ATTRACTION" />

                <TextView
                    android:id="@+id/attraction_categorie"
                    style="@style/categorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monument" />

                <TextView
                    android:id="@+id/attraction_price"
                    style="@style/prix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:text="$$-$$" />

                <TextView
                    android:id="@+id/attraction_location"
                    style="@style/locationArera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="FRONT CENTER" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_location_pin_small" />

                    <TextView
                        android:id="@+id/attraction_distance"
                        style="@style/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="12 MILES" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>